def graus_celsius(temperatura):
    graus = (temperatura - 32)/1.8
    return print(f'aproximente {graus} graus celsius')


def farenheits(temperatura):
    farenheit = temperatura * 1.8 + 32
    return print(f'aproximente {farenheit} graus fareheint ')


resp = int(input('Deseja converter de:\n1 - Para Graus\n2 - Para farenheits\n'))
if resp == 1:
    temperatura = float(input('Quantos farenheits deseja converter para graus celsius?: '))
    graus_celsius(temperatura)
if resp == 2:
    temperatura = float(input('Quantos graus celsius deseja converter para farenheits?: '))
    farenheits(temperatura)
